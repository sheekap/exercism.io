<div class="container">
  <section class="page-header">
    <h1>Stats: <small><%= progress.language %></small></h1>
  </section>

  <ul class="nav nav-tabs">
    <% tracks.each do |track| %>
      <% css_class = (track.id == progress.track_id ? 'active' : '') %>
      <li class="<%= css_class %>">
        <a href="/stats/<%= track.id %>"><%= track.language %></a>
      </li>
    <% end %>
  </ul>

  <h2>Exercises</h2>

  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Active Exercises</th>
        <th>Archived Exercises</th>
        <th>Comments</th>
      </tr>
    </thead>
    <tbody>
    <% progress.metrics.each do |metric|%>
      <tr>
        <td>
          <%= metric.slug.titleize %>
        </td>
        <td><%= metric.active %></td>
        <td><%= metric.archived %></td>
        <td><%= metric.comments %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
